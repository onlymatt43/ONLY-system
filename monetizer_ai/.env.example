PORT=5060

# Base de données (SQLite fichier local)
DB_PATH=./monetizer.db

# URL publique/locale de ce service (utilisée pour fabriquer les liens/QR)
# Exemple public: https://tokens.onlymatt.ca
# Exemple local:  http://localhost:5060
BASE_URL=http://localhost:5060

# Sceau HMAC pour signer les tokens (met n'importe quelle chaîne longue et unique)
SECRET_KEY=change-me-super-long-secret

# Préfixe short-code (affiché au client; utile branding)
CODE_PREFIX=OM43

# Durée par défaut (minutes) si non fourni
DEFAULT_DURATION_MIN=1440

# Domaines amis (CORS très simple si tu exposes en public — optionnel)
CORS_ORIGINS=*
